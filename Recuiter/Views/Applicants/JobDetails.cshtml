@model Recruiter.ViewModels.JobViewModel
@if (!User.Identity.IsAuthenticated)
{
    ViewBag.Title = "E-Recruiter";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
else
{
    ViewBag.Title = "E-Recruiter";
    Layout = "~/Views/Shared/ProfileLayout.cshtml";
}
<style>
    .btn-outline-secondary {
        padding: 0.5px;
        font-size: 14px;
        width: 124px;
        height: 33px;
        border-color: #707070;
        border-radius: 17px;
        color: #000000;
    }

    a {
        color: black
    }

        a:hover {
            color: blue;
        }
</style>
<div class="img-banner">
    <div class="header-primary">

        <h4>@Html.DisplayFor(m => m.Title)</h4>
        <div class="class d-flex">
            <button type="button" class="btn btn-outline-primary mx-1 mb-4">@Html.DisplayFor(m => m.ContractFormat)</button>

        </div>
    </div>
<div class="container">
    <div class="row">
        <div class="col-sm-7 p-3 bg-white" id="rectangle">
            <h2 class="head">@Html.DisplayFor(m => m.Title)</h2>
            <p><i class="far fa-calendar mr-2" style="color:#077dbe"></i>Application deadline: @Html.DisplayFor(m => m.ExpiryDate)</p>
            <hr>
            <P>
                @Html.DisplayFor(m => m.Description)
            </P>
            <h5>@Html.LabelFor(m => m.Responsibility)</h5>
            <ul>
                <p class="decoy">@Html.DisplayFor(m => m.Responsibility)</p>
            </ul>
            <h5>@Html.LabelFor(m => m.Characteristics)</h5>
            <ul>
                <p class="decoy">@Html.DisplayFor(m => m.Characteristics)</p>

            </ul>
            <h5>@Html.LabelFor(m => m.SkillSet)</h5>
            <p>@Html.DisplayFor(m => m.SkillSet)</p>
            <div class="class d-flex">
                <button type="button" class="btn btn-outline-secondary mx-1 mb-4">@Html.DisplayFor(m => m.SkillSet)</button>
                <button type="button" class="btn btn-outline-secondary mx-1 mb-4">Photoshop</button>
                <button type="button" class="btn btn-outline-secondary mx-1 mb-4">Adobe XD</button>
                <button type="button" class="btn btn-outline-secondary mx-1 mb-4">Sketch</button>
                <button type="button" class="btn btn-outline-secondary mx-1 mb-4">Invision</button>
            </div>
            <h5>REQUIREMENT</h5>
            <p><b>@Html.LabelFor(m => m.ExperienceLevel):</b> @Html.DisplayFor(m => m.ExperienceLevel)</p>
            <p><b>Availability:</b> @Html.DisplayFor(m => m.ContractFormat)</p>
            <p><b>@Html.LabelFor(m => m.MinimumQualification):</b> @Html.DisplayFor(m => m.QualificationFormat)</p>
            @*<button type="button" class="btn btn-II mx-1 mb-4">Apply Now</button>*@
            @Html.ActionLink("Apply Now", "ApplicantProfileEdit", "Applicants", new { jobId = Model.Id }, new { @class = "btn btn-II mx-1 mb-4" })
        </div>
        <div class="col-sm-1">
        </div>
        <div class="col-sm-4 bg-white p-3" id="square">

            <div class="omega  d-flex justify-content-between mx-0">
                <p>Share this job:</p>
                <a href="https://facebook.com" target="_blank"><i class="fab fa-facebook-square"></i></a>
                <a href="https://plus.google.com" target="_blank"><i class="fab fa-google-plus"></i></a>
                <a href="https://www.linkedin.com" target="_blank"><i class="fab fa-linkedin"></i></a>
                <a href="https://www.twitter.com" target="_blank"><i class="fab fa-twitter-square"></i></a>
                <a href="https://www.instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
            </div>
            <div>
                <p class="top">Top Applied Jobs</p>
                @foreach (var job in ViewBag.TopAppliedJobs)
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card">
                                <div class="d-flex card-body2" style="padding:10px;">
                                    <div class="deets">
                                        <p><a href="@Url.Action("Jobdetails", "Applicants", new {id = job.Id })">@job.Title</a></p>
                                        <p><small>Expiry Date: @Html.DisplayFor(m => m.ExpiryDate)</small></p>
                                        @*<p>Job Function: @Html.DisplayFor(m => m.Department)</p>*@
                                    </div>
                                    @*<button type="button" class="btn btn-outline-secondaryy mx-1 mb-4">NEW</button>*@
                                </div>
                            </div>
                        </div>

                        <!-- <div class="row"> -->
